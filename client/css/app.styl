// Example Stylus file
//
// Stylus docs:  http://learnboost.github.com/stylus/docs/js.html
// Nib docs:     http://visionmedia.github.com/nib

@import 'nib'

// Main

body, html
  height 100%

body
  font normal 1em sans-serif
  background linear-gradient(top, #eee, #fff)
  text-align center

p
  margin-bottom 1em

a
  color #000a68

h1
  font-size 1.5em
  font-weight normal
  margin 1.5em
  color #333
  text-shadow 1px 1px 2px white

#content
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  height: 100%
  width: 100%

#me
  position: absolute
  top: 0
  right: 0
  text-align: left
  overflow: hidden


#goal
  background-color: blue
  position: absolute
  top: 30%
  left: 30%
  width: 40%
  height: 40%

//================ Ball

$ball_diameter = 50px

#balls
  width: 100%
  height: 100%
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 1
  & > div
    background-color: green
    border-radius: (@width / 2)
    width: $ball_diameter
    height: $ball_diameter
    line-height: @height
    position: absolute
    transition: top .5s, left .5s, opacity 1s
    &.disabled
      backbround-color: red
      opacity: 0
    


//================ Chat

#chat
  border 1px solid #ccc
  width 96%
  text-align left
  padding .5em 2%
  position: fixed
  bottom: 0
  left: 0
  background-color: #333
  z-index:1
  h3
    font-size 1.0em
    font-weight normal
  h5
    padding 1% 0
    color #666
    font-weight normal
    font-size 0.8em
  .minmax
    cursor: pointer
    background: #fff
    width: 5%
    height: 1em
    padding: 0.5em 2%
    float: left
  #myMessage, #chatlog, .minmax
    border none
    box-shadow inset 0 0 2px #777
    border-radius 5px
  #myMessage
    width 86%
    padding .5em 2%
  #chatlog
    width 100%
    background-color white
    margin 5px 0
    max-height: 50px
    overflow-y: scroll
    p
      font-size 0.9em
      color #000a68
      padding 3px 9px
      margin 0
    p:first-child
      padding-top 9px
    p:last-child
      padding-bottom 9px
    span.time
      color #666
      float right
      width 70px
      text-align right
      font-size 0.7em
    